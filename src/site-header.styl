#site-header
	position relative
	z-index 1
	overflow-x hidden
	color #fff
	text-shadow 0rem 0.05rem 0.2rem #000
	background-color $brand-primary-color
	padding 2rem
	display flex
	flex-direction column

	// the background image pseudo element
	#site-header-overlay
		position absolute
		height 100%
		width 100%
		top 0
		left 0
		background-color rgba(0, 0, 0, 0.5)
		z-index -4

	#intro
		display flex
		flex-direction column
		align-self center
		align-items center
		justify-content center
		flex-grow 1

		.wrapper
			min-height 20rem
			display flex
			flex-direction column
			flex-grow 1
			align-self center
			align-items center
			text-align center

		h2
			margin 0
			padding 0
			font-size 4.0rem
			line-height 2em
			font-weight 300

		p
			margin 0
			padding 0
			font-size 2.4rem
			line-height 1.4em

#site-header.hero-header, body.home-page #site-header
		height 100vh

		#site-header-overlay
			height 100vh

